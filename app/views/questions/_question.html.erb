<% response = Response.find_by_question_id_and_user_id(question.id, current_user.id) || Response.new %>
<tr>
  <td><%= question.question %> </td>
  <td><%= question.username %></td>
  <td class="center"><%= question.yes_count || 0 %></td>
  <td class="center"><%= question.no_count || 0 %></td>
  <td>
    <%= render "responses/form", question: question, response: response %>
  </td>
  <td>
    <%= button_to question, class: "btn shadow-none", :method=> :delete,
                  data: { bs_toggle: "tooltip",
                          bs_title: "Delete this question",
                          bs_placement: 'right',
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure you want to delete #{question.question}?" } do %>
      <i class="bi-trash" style="font-size: 1rem; color: red;"></i>
    <% end %>
  </td>
</tr>
<script type=application/javascript>

  var tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
  var tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))

</script>