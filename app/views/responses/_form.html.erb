<%= form_with(model: local_assigns[:response], html: { name: 'response-form' }) do |form| %>
  <div>
    Yes&nbsp; <%= form.radio_button :answer, :yes, data: { controller: 'authentic' }, onclick: "this.response-form.submit();" %>
    &nbsp;No&nbsp; <%= form.radio_button :answer, :no, data: { controller: 'authentic' }, onclick: "this.response-form.submit();" %>
    <%= form.hidden_field :question_id, value: question.id %>
  </div>
<% end %>
